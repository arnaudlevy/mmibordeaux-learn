<% title = "Students" %>
<% content_for :title do title end %>

<h1><%= title %></h1>
<%= link_to 'New Student', new_student_path %>
<table class="table">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Codeschool</th>
      <th>Codecademy</th>
      <th>Promotion</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.firstname, student %></td>
        <td><%= link_to student.lastname, student %></td>
        <td><%= student.codeschool %></td>
        <td><%= student.codecademy %></td>
        <td><%= student.promotion %></td>
      </tr>
    <% end %>
  </tbody>
</table>