<%= title 'Promotions' %>
<%= link_to 'Nouvelle promotion', new_admin_promotion_path, class: 'btn btn-default' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Etudiants</th>
      <th>Moyenne</th>
    </tr>
  </thead>
  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= link_to promotion, [:admin, promotion] %></td>
        <td><%= promotion.students.count %></td>
        <td><%= '%.2f' % promotion.average_note.to_f %></td>
      </tr>
    <% end %>
  </tbody>
</table>
