<h1>Events</h1>
<%= link_to 'New Event', new_event_path, class: 'btn btn-default' %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event, event %></td>
          <td><%= event.date %></td>
          <td><%= event.description %></td>
          <td>
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-default btn-xs' %>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
