<% title = "Promotions" %>
<% content_for :title do title end %>

<h1><%= title %></h1>
<%= link_to 'New Promotion', new_promotion_path %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Students</th>
    </tr>
  </thead>
  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= link_to promotion, promotion %></td>
        <td><%= promotion.students.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>