<%= simple_form_for [:admin, @achievement] do |f| %>
  <%= f.error_notification %>
  <%= f.association :course, label_method: :name_with_promotion %>
  <%= f.input :title %>
  <%= f.input :text %>
  <%= f.input :position %>
  <%= f.input :points %>
  <%= f.input :kind, collection: Achievement::KINDS, include_blank: false %>
  <%= f.input :identifier %>
  <%= f.input :why %>
  <%= f.input :how %>
  <%= f.button :submit, 'Enregistrer' %>
<% end %>
