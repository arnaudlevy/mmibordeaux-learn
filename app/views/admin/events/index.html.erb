<%= title 'Événements' %>
<%= link_to 'Nouvel événement', new_admin_event_path, class: 'btn btn-primary' %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event, [:admin, event] %></td>
          <td><%= event.date %></td>
          <td><%= event.description %></td>
          <td>
            <%= link_to 'Edit', edit_admin_event_path(event), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Destroy', [:admin, event], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
