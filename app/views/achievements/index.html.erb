<h1>Réalisations</h1>
<%= link_to 'Nouvelle réalisation', new_achievement_path, class: 'btn btn-default' if current_student.admin %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Why</th>
        <th>How</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @achievements.each do |achievement| %>
        <tr>
          <td><%= link_to achievement.title, achievement %></td>
          <td><%= achievement.why %></td>
          <td><%= achievement.how %></td>
          <td>
            <%= link_to 'Edit', edit_achievement_path(achievement), class: 'btn btn-default btn-xs' if current_student.admin %>
            <%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' if current_student.admin %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
